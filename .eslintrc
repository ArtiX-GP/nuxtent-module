{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "prettier-standard"
  ],
  "rules": {
    "curly": [
      "error",
      "all"
    ]
  },
  "globals": {
    "jest/globals": true,
    "jasmine": true
  }
}
