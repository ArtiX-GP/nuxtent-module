{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./lib",
    "lib": ["esnext"],
    "typeRoots": ["./types"],
    "types": ["@nuxt/typesript", "@types/node", "@nuxt/vue-app"]
  }
}
